{
  "name": "@pake/fastify",
  "version": "0.1.0",
  "description": "Fastify server app.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "start": "node -r dotenv/config dist/server.js",
    "build": "bob-ts --paths -i src",
    "dev": "bob-ts-watch --paths -i src -c \"npm start\"",
    "pretest": "bob-ts -f cjs -i test -d .temp ",
    "test": "tap -R specy .temp/**/*.test.cjs",
    "lint": "eslint --ext .ts --fix ."
  },
  "tap": {
    "node-arg": [
      "--require=dotenv/config",
      "--no-warnings",
      "--experimental-loader=@istanbuljs/esm-loader-hook"
    ]
  },
  "keywords": [
    "fastify",
    "API",
    "ESM",
    "Typescript"
  ],
  "author": "Eko Eryanto<ekoeryanto@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/sensible": "^5.0.0",
    "close-with-grace": "^1.1.0",
    "fastify": "^4.0.0",
    "fastify-plugin": "^4.2.1"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "@types/node": "^18.11.17",
    "@types/tap": "^15.0.5",
    "bob-ts": "^4.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.10",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "pino-pretty": "^9.1.1",
    "tap": "^16.1.0",
    "typescript": "^4.5.4"
  }
}
